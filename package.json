{
  "name": "nomina-monorepo",
  "private": true,
  "workspaces": [
    "Nomina-backend",
    "Nomina-desktop"
  ],
  "scripts": {
    "dev:backend": "npm -w Nomina-backend run dev",
    "dev:desktop": "npm -w Nomina-desktop run dev",
    "app:dev": "npm -w Nomina-desktop run app:dev",
    "build:backend": "npm -w Nomina-backend run build",
    "build:desktop": "npm -w Nomina-desktop run build",
    "seed": "npm -w Nomina-backend run seed", 
    "postinstall": "prisma generate"
  }
}
